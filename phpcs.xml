<?xml version="1.0"?>
<ruleset name="NeuroHowell WordPress Standards">

  <!-- Pull in WordPress Extra, but exclude Yoda condition enforcement -->
  <rule ref="WordPress-Extra">
    <exclude name="Generic.ControlStructures.DisallowYodaConditions"/>
  </rule>

  <!-- Scope only to the theme directory -->
  <file>src</file>

  <!-- Exclusions -->
  <exclude-pattern>**/js/**</exclude-pattern>
  <exclude-pattern>**/cs/**</exclude-pattern>
  <exclude-pattern>*.js</exclude-pattern>
  <exclude-pattern>*.css</exclude-pattern>
  <exclude-pattern>**/vendor/**</exclude-pattern>
  <exclude-pattern>**/stubs/**</exclude-pattern>
  <exclude-pattern>**/node_modules/**</exclude-pattern>
  <exclude-pattern>**/build/**</exclude-pattern>
  <exclude-pattern>**/advanced-custom-fields-config/**</exclude-pattern>
  <exclude-pattern>.git/**</exclude-pattern>
  <exclude-pattern>.github/**</exclude-pattern>
  <exclude-pattern>.vscode/**</exclude-pattern>
  <exclude-pattern>.idea/**</exclude-pattern>
  <exclude-pattern>.DS_Store/**</exclude-pattern>

</ruleset>